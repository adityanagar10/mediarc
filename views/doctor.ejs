  <form action="/doctorregistration" method="POST" id="form-edit">
    <div class="form-header">
      <h1>Doctor Registration</h1>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="first-name">First Name</label>
        <input type="textl" class="form-control" name="f_name" id="first-name" placeholder="First Name">
      </div>
      <div class="form-group col-md-6">
        <label for="last-name">Last Name</label>
        <input type="text" class="form-control" name="l_name" id="last-name" placeholder="Last Name">
      </div>
    </div>
    <div class="form-group">
      <label for="phone">Phone number</label>
      <input type="phone" class="form-control" name="phone_number" id="phone" placeholder="Enter contact details">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email_doctor" id="email" placeholder="Enter-email@xyz.com">
    </div>

    <div class="form-group">
      <label for="city">Address</label>
      <input type="text" name="address" class="form-control" id="city" placeholder="Enter your Address">
    </div>

    <div class="form-group">
      <label for="clinic-address">Clinic City</label>
      <input type="text" class="form-control" name="clinic_city" id="clinic-Address" placeholder="Enter Clinic City">
    </div>
        <div class="form-group">
          <label for="degree">Degree</label>
          <input type="text" class="form-control" name="degree" id="degree" placeholder="Enter degree">
        </div>

        <div class="form-group">
          <label for="specialisation">Specialisation</label>
          <input type="text" class="form-control" name="specialisation" id="specialisation" placeholder="Enter Specialisation">
        </div>
    <div class="form-group">
      <div class="edit-button">
        <button type="submit" class="btn btn-primary">REGISTER</button>
      </div>
    </div>


  </form>

